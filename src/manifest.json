{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "0.1",
  "author": "Yuribtr",
  "default_locale": "en",
  "web_accessible_resources": [
    "vmeter.js"
  ],
  "icons": {
    "19": "icon_19_off.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "__MSG_extTitle__",
    "default_icon": {
      "19": "icon_19_off.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "langlist.js",
        "content.js"
      ],
      "css": [
        "speechAssistant.css"
      ]
    }
  ]
}